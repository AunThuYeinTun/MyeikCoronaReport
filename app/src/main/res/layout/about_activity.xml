<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/logoone" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/NameStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MYEIK CORONA REPORT"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:textSize="30dp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TotalFontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="version: 1.0"

            android:textColor="@color/colorTotalConfirmed"
            android:textSize="16dp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TotalFontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Developed by"
            android:textColor="@color/colorTotalRecovered"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_atyt"
                style="@style/NameStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Aung Thu Yein Tun (Hippo)"
                android:textColor="@color/colorTotalRecovered"
                android:textSize="18sp"
               />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_thth"
                style="@style/TotalFontStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thiha Thein Htaik (Credit)"
                android:textColor="@color/colorTotalRecovered"
                android:textSize="18sp" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TotalFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="ယခု app တွင် မြန်မာနိုင်ငံ၏covid-19နှင့်ပတ်သက်သောအချက်အလက်များကို ကျန်းမာရေးနှင့်အားကစားဝန်ကြီးဌာနဝက်ဆိုဒ်(mohs.gov.mm)မှရယူထားခြင်းဖြစ်သည်။မြိတ်ခရိုင်အတွက်အရေးပေါ်ဖုန်းနံပါတ်များ နှင့် သတင်းအချက်အလက်များကို သက်ဆိုင်ရာအဖွဲ့ အစည်းများမှ ကောက်ယူထားပါသည်။"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TotalFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="အဆင်မပြေမှုများအတွက် အောက်ပါ E-mail သို့ဆက်သွယ်အကြောင်းကြားနိုင်ပါသည်။ "
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TotalFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/emailtv"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="covidmyeik@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:autoLink="email"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>